# Service URLs
API_GATEWAY_URL=http://api-gateway
AUTH_SERVICE_URL=http://auth-service
FOLLOWER_SERVICE_URL=http://follower-service

# Service ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
FOLLOWER_SERVICE_PORT=3005

# Database settings (PostgreSQL)
AUTH_DB_HOST=auth-db
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password
AUTH_DB_PORT=5432

# Follower database settings (Neo4j)
FOLLOWER_DB_URL=bolt://follower-db
FOLLOWER_DB_NAME=neo4j
FOLLOWER_DB_USER=neo4j
FOLLOWER_DB_PASSWORD=follower_password
FOLLOWER_DB_PORT=7687

# Miscellaneous settings
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h