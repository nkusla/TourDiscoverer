# Service URLs
API_GATEWAY_URL=http://api-gateway
AUTH_SERVICE_URL=http://auth-service
FOLLOWER_SERVICE_URL=http://follower-service
TOUR_SERVICE_URL=http://tour-service

# Service ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
FOLLOWER_SERVICE_PORT=3005
TOUR_SERVICE_PORT=3006
BLOG_SERVICE_PORT=3002

# Auth database settings (PostgreSQL)
AUTH_DB_HOST=auth-db
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password
AUTH_DB_PORT=5432

# Follower database settings (Neo4j)
FOLLOWER_DB_URL=bolt://follower-db
FOLLOWER_DB_NAME=neo4j
FOLLOWER_DB_USER=neo4j
FOLLOWER_DB_PASSWORD=follower_password
FOLLOWER_DB_PORT=7687

# Tour database settings (PostgreSQL)
TOUR_DB_HOST=tour-db
TOUR_DB_NAME=tour_db
TOUR_DB_USER=tour_user
TOUR_DB_PASSWORD=tour_password
TOUR_DB_PORT=5433

# Blog database settings (MongoDB)
BLOG_DB_NAME=blog_db
BLOG_DB_USER=blog_user
BLOG_DB_PASSWORD=blog_password
BLOG_DB_PORT=27017

# Miscellaneous settings
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h